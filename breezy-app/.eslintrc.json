{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest/globals": true,
    "cypress/globals": true
  },
  "extends": [
    "eslint:recommended",
    "next/babel",
    "next/core-web-vitals"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2022,
    "ecmaFeatures": {
      "jsx": true
    },
    "project": "./tsconfig.json",
    "tsconfigRootDir": "."
  },
  "plugins": [
    "json",
    "jest",
    "cypress",
    "react-hooks",
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "keyword-spacing": "error",
    "linebreak-style": "error",
    "quotes": [
      "error",
      "single"
    ],
    "semi": "error",
    "space-before-blocks": "error",
    "space-before-function-paren": "error",
    "no-undef": "off",
    "no-unused-vars": "off"
  }
}